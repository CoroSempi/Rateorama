                <input type="checkbox" value="Horror" class="genres[]" />
                <label>Horror</label>
                <input
                  type="checkbox"
                  value="Science Fiction"
                  class="genres[]" />
                <label>Science Fiction</label>
                <input type="checkbox" value="Adventure" class="genres[]" />
                <label>Adventure</label>
                <input
                  type="hidden"
                  id="selectedGenresInput3"
                  name="tvshowsGenres"
                  required />
              </div>

              <input
                class="inputf"
                placeholder="Write here ...."
                type="text"
                name="Tposter"
                required />
              <input
                class="inputf"
                placeholder="Write here ...."
                type="text"
                name="TbgPic"
                required />

              <input
                class="numbers"
                type="number"
                name="Trate"
                min="1"
                max="5"
                step="0.1" />
              <input
                class="numbers"
                type="number"
                name="TratingsNumber"
                required />

              <div style="display: flex; margin-top: 7px">
                <input name="Tadults" type="checkbox" />
                <label>+18</label>
              </div>
            </div>
          </div>
          <p id="Talert" class="green , none1">Tvshow uploaded successfully!</p>
          <p id="Talert2" class="none1">Tvshow already exists !!</p>
          <div class="buttonss">
            <button type="submit" class="button">
              <img class="buttonPic" src="./pics/upload.png" />
              <div class="buttonText">Upload</div>
            </button>
            <button type="reset" style="background-color: white" class="button">
              <div class="buttonText">Clear</div>
            </button>
          </div>
        </form>
      </div>
    </section>

    <script src="./script.js"></script>
    <script src="./formsJS/emailSubmit.js"></script>
    <script src="./formsJS/moviesSubmit.js"></script>
    <script src="./formsJS/seriesSubmit.js"></script>
    <script src="./formsJS/tvshowsSubmit.js"></script>
    <script src="./navbar.js"></script>

    <script>
      function submitForm() {
        var selectedGenres = [];
        var checkboxes = document.getElementsByClassName("genres[]");
        for (var i = 0; i < checkboxes.length; i++) {
          if (checkboxes[i].checked) {
            selectedGenres.push(checkboxes[i].value);
          }
        }

        // Store the selected genres in a hidden input field
        document.getElementById("selectedGenresInput1").value = selectedGenres;

        document.getElementById("selectedGenresInput2").value = selectedGenres;

        document.getElementById("selectedGenresInput3").value = selectedGenres;
      }
    </script>
  </body>
</html>

              <div style="margin-top: -20px" class="pp">Release Date</div>
              <div style="margin-top: -20px" class="pp">Trailer Link</div>
              <div style="margin-top: -20px" class="pp">Series Overview</div>
              <div style="margin-top: 120px" class="pp">Geners</div>
              <div style="margin-top: 20px" class="pp">Series Poster</div>
              <div style="margin-top: -20px" class="pp">Series Bg</div>
              <div style="margin-top: -15px" class="pp">Starter Rate</div>
              <div style="margin-top: -20px" class="pp">Number of Ratings</div>
              <div style="margin-top: -20px" class="pp">For Adults</div>
            </div>

            <div class="inputss">
              <input
                name="Sname"
                class="inputf"
                placeholder="Write here ...."
                type="text"
                required />
              <input
                name="Srelease"
                class="inputf"
                placeholder="Write here ...."
                type="text"
                required />
              <input
                name="SdateRelease"
                class="inputf"
                placeholder="Write here ...."
                type="date"
                required />
              <input
                name="StrailerLink"
                class="inputf"
                placeholder="Write here ...."
                type="text"
                required />
              <textarea
                name="Soverview"
                placeholder="Write here ...."
                name="message"
                rows="10"
                cols="30"
                required></textarea>
              <div class="genres">
                <input type="checkbox" value="Action" class="genres[]" />
                <label>Action</label>
                <input type="checkbox" value="Romantic" class="genres[]" />
                <label>Romantic</label>
                <input type="checkbox" value="Crime" class="genres[]" />
                <label>Crime</label>
                <input type="checkbox" value="Drama" class="genres[]" />
                <label>Drama</label>
                <input type="checkbox" value="Comedy" class="genres[]" />
                <label>Comedy</label>
                <input type="checkbox" value="Fantasy" class="genres[]" />
                <label>Fantasy</label>
                <input type="checkbox" value="Horror" class="genres[]" />
                <label>Horror</label>
                <input
                  type="checkbox"
                  value="Science Fiction"
                  class="genres[]" />
                <label>Science Fiction</label>
                <input type="checkbox" value="Adventure" class="genres[]" />
                <label>Adventure</label>
                <input
                  type="hidden"
                  id="selectedGenresInput2"
                  name="seriesGenres"
                  required />
              </div>

              <input
                class="inputf"
                placeholder="Write here ...."
                type="text"
                name="SPoster"
                required />
              <input
                class="inputf"
                placeholder="Write here ...."
                type="text"
                name="SbgPic"
                required />

              <input
                class="numbers"
                type="number"
                name="SRate"
                min="1"
                max="5"
                step="0.1" />
              <input
                class="numbers"
                type="number"
                name="SRatingsNumber"
                required />

              <div style="display: flex; margin-top: 7px">
                <input name="Sadults" type="checkbox" />
                <label>+18</label>
              </div>
            </div>
          </div>
          <p id="Salert" class="green , none1">Series uploaded successfully!</p>
          <p id="Salert2" class="none1">Series already exists !!</p>
          <div class="buttonss">
            <button type="submit" class="button">
              <img class="buttonPic" src="./pics/upload.png" />
              <div class="buttonText">Upload</div>
            </button>
            <button type="reset" style="background-color: white" class="button">
              <div class="buttonText">Clear</div>
            </button>
          </div>
        </form>
      </div>

      <!-- Tvshowsform---------------------------------------------------------------------------------------------------------------------------- -->
      <div id="tvInfo" class="none , border">
        <form
          id="tvshowssForm"
          onsubmit="submitForm()"
          enctype="multipart/form-data">
          <div class="formNosubmit">
            <div class="flabels">
              <div style="margin-top: 10px; margin: buttom 20px" class="pp">
                Tvshow Name
              </div>
              <div style="margin-top: -20px" class="pp">Release Year</div>
              <div style="margin-top: -20px" class="pp">Release Date</div>
              <div style="margin-top: -20px" class="pp">Trailer Link</div>
              <div style="margin-top: -20px" class="pp">Tvshow Overview</div>
              <div style="margin-top: 120px" class="pp">Geners</div>
              <div style="margin-top: 20px" class="pp">Tvshow Poster</div>
              <div style="margin-top: -20px" class="pp">Tvshow Bg</div>
              <div style="margin-top: -15px" class="pp">Starter Rate</div>
              <div style="margin-top: -20px" class="pp">Number of Ratings</div>
              <div style="margin-top: -20px" class="pp">For Adults</div>
            </div>
            <div class="inputss">
              <input
                name="Tname"
                class="inputf"
                placeholder="Write here ...."
                type="text"
                required />
              <input
                name="Trelease"
                class="inputf"
                placeholder="Write here ...."
                type="text"
                required />
              <input
                name="RdateRelease"
                class="inputf"
                placeholder="Write here ...."
                type="date"
                required />
              <input
                name="TtrailerLink"
                class="inputf"
                placeholder="Write here ...."
                type="text"
                required />
              <textarea
                name="Toverview"
                placeholder="Write here ...."
                name="message"
                rows="10"
                cols="30"
                required></textarea>
              <div class="genres">
                <input type="checkbox" value="Action" class="genres[]" />
                <label>Action</label>
                <input type="checkbox" value="Romantic" class="genres[]" />
                <label>Romantic</label>
                <input type="checkbox" value="Crime" class="genres[]" />
                <label>Crime</label>
                <input type="checkbox" value="Drama" class="genres[]" />
                <label>Drama</label>
                <input type="checkbox" value="Comedy" class="genres[]" />
                <label>Comedy</label>
                <input type="checkbox" value="Fantasy" class="genres[]" />
